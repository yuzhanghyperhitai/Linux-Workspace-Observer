[general]
data_dir = "./log/data"
log_level = "DEBUG"

[database]
host = "localhost"
port = 5432
name = "lwo"
user = "postgres"
password = "postgres"

[collectors]
process_snapshot_interval = 60
# file_watch_dirs are automatically discovered by AI
file_watch_extensions = [".py", ".js", ".ts", ".java", ".c", ".cpp", ".go", ".rs", ".md", ".toml", ".yaml", ".json"]

[ai]
api_key = "AIxxxx"
model = "gemini-2.5-flash-lite"

[reporting]
daily_report_time = "18:00"
report_output_dir = "./log/reports"

[host_log]
# Enable/disable host log monitoring
enabled = true

# Minimum log level to collect (INFO/WARNING/ERROR/CRITICAL)
min_level = "ERROR"

# Noise filtering patterns (regex)
exclude_patterns = [
    "DHCP.*renewal",
    "CRON.*pam_unix",
    "NetworkManager.*state changed",
]
