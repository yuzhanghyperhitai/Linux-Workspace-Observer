# LWO Configuration Example
# Copy this to lwo.toml and customize

[general]
data_dir = "./log/data"
log_level = "DEBUG"

[database]
host = "localhost"
port = 5432
name = "lwo"
user = "postgres"
# Password can be set here or via LWO_DB_PASSWORD environment variable
# password = "your-password-here"

[collectors]
process_snapshot_interval = 60

[ai]
# Google Gemini configuration
api_key = "your-google-api-key-here"
model = "gemini-2.5-flash-lite"

[reporting]
daily_report_time = "18:00"
report_output_dir = "./log/reports"

[host_log]
# Enable/disable host log monitoring
enabled = true

# Minimum log level to collect (INFO/WARNING/ERROR/CRITICAL)
min_level = "WARNING"

# Noise filtering patterns (regex)
exclude_patterns = [
    "DHCP.*renewal",
    "CRON.*pam_unix",
    "NetworkManager.*state changed",
]
