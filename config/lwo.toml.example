[general]
data_dir = "./log/data"
log_level = "DEBUG"

[database]
host = "localhost"
port = 5432
name = "lwo"
user = "postgres"
# Password can be set here or via LWO_DB_PASSWORD environment variable
# password = "your-password-here"

[collectors]
process_snapshot_interval = 60

[ai]
# Google Gemini configuration
api_key = "your-google-api-key-here"
model = "gemini-2.5-flash-lite"

[reporting]
daily_report_time = "18:00"
report_output_dir = "./log/reports"
